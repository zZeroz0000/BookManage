@model WebApplication2.Models.Book

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Book</h4>
    <hr />
    <dl class="dl-horizontal">
        
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        

        <dd>
            @Html.DisplayFor(model => model.Descriptions)
        </dd>

        <dd>
            <textarea rows="4" cols="50" disabled> @Html.DisplayFor(model => model.Descriptions) </textarea>
        </dd>

        <dd>
            @Html.DisplayFor(model => model.Author)
        </dd>

        

        <dd>
            @Html.DisplayFor(model => model.Images)
        </dd>

        <dd>
            <img src="@Html.DisplayFor(model => model.Images)" alt="@Html.DisplayFor(model => model.Images)" height="900" width="500" />
        </dd>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "ListBook")
        </div>
    }
</div>
